<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.jsync.marqueetextview.MarqueeTextView
        android:id="@+id/topMarquee"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gradient_caller_id"
        android:padding="6dp"
        android:text="@string/default_marquee_text"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:marqueeDelay="2000" />

    <com.jsync.marqueetextview.MarqueeTextView
        android:id="@+id/bottomMarquee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by - Jaseem Akhtar"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintEnd_toEndOf="@+id/topMarquee"
        app:layout_constraintStart_toStartOf="@+id/topMarquee"
        app:layout_constraintTop_toBottomOf="@+id/topMarquee"
        app:marqueeDelay="2000" />

</androidx.constraintlayout.widget.ConstraintLayout>